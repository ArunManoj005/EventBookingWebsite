</div>






  <script>
     $(document).ready(function() {
    $('.box').click(function() {
        // Get the current width of the search input field
        var currentWidth = $('#searchInput').width();
        
        // Set the width of the search input field to its current width
        // This stops the animation by overriding the CSS transition
        $('#searchInput').css('width', currentWidth + 'px');
    });
});
    function openNav() {
      document.getElementById("myNav").style.height = "100%";
    }
    
    function closeNav() {
      document.getElementById("myNav").style.height = "0%";
    }
    </script>
