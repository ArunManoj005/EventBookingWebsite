<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=\, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="/style.css">
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const userTypeSelect = document.getElementById('user_type');
            const additionalInputs = document.getElementById('additional-inputs');

            userTypeSelect.addEventListener('change', function() {
                if (this.value === 'admin') {
                    additionalInputs.style.display = 'block';
                } else {
                    additionalInputs.style.display = 'none';
                }
            });

            // Initially hide the additional inputs
            additionalInputs.style.display = 'none';
        });
    </script>


</head>
<body class="body-register">
    <div class="form-container-reg">
        <h2 id="register-now">Register Now</h2>
        <form action="/register" method="post">

            <div class="form-group-reg">
                <label for="name">name :</label>
                <input type="text" id="name" name="name" placeholder="enter your name" required autocomplete="off">

            </div>
            <div class="form-group-reg">
                <label for="email">email :</label>
                <input type="text" id="email" name="email" placeholder="enter you email" required autocomplete="off">

            </div>
            
            <div class="form-group-reg">
                <label for="password">password :</label>
                <input type="password" name="password" id="password" placeholder="enter your password" required>

            </div>
            <div class="form-group-reg">
                <label for="password">confirm password :</label>
                <input type="password" name="c_password" id="c_password" placeholder="enter your password" required>

            </div>
            <div class="form-group-reg">
                <label for="user_type">User Type :</label>
                <select id="user_type" name="user_type">
                    <option value="user">user</option>
                    <option value="admin">admin</option>
                 </select>
            </div>
            <div id="additional-inputs" class="form-group-reg">
                <!-- Additional input boxes for admin -->
                <label for="ac-number">Your A/C no</label>
                <input type="number" id="ac-number" name="ac-number" placeholder="Enter the A/C number">
                <label for="ifsc-number">Your IFSC code</label>
                <input type="text" id="ifsc-number" name="ifsc-number" placeholder="Enter the IFSC code">
                <label for="aadhar-number">Your aadhar no</label>
                <input type="text" id="aadhar-number" name="aadhar-number" placeholder="Enter the 12 digit aadhar number">
            </div>
            
            <div id="captcha-reg" class="g-recaptcha" data-sitekey="6LfaecYpAAAAAA5g9g5XwOOGfwlHe98-XC58pZDP
            "></div>
            <% if (message) { %>
                <div class="reg-alert-success" style="    
                padding-top: 10px;
                font-size: 20px;
                color: red;
                text-align: center;">
                    <%= message %>
                </div>
            <% } %>
            <button type="submit"class="submit-btn-reg">signup</button>
            
            <p id="backtologin">already have an account? <a class="link-reg" href="/">login</a></p>

        </form>
    </div>
   
        
    
</body>
</html>